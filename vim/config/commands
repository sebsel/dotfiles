"==> Commands

filetype plugin indent on

"-> Keep doing these wrong
command! Q quit
command! W write

"-> Shorter writes
nmap <leader>w :wall<cr>

"-> Overwrite Ex mode for executing q macro
nmap Q @q

nmap <leader>so :source %<cr>

"-> faster yank to system keyboard
nmap gy "+y
vmap gy "+y

autocmd VimResized * :wincmd =

" vim: ft=vim
